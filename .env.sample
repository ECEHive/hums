# =============================================================================
# HUMS Docker Production Environment Configuration
# =============================================================================

# This is for the Docker production environment.
# This is NOT for local development!
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# =============================================================================
# General Configuration
# =============================================================================

# Timezone
TZ=America/New_York

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL password for the hums user
# IMPORTANT: Change this to a strong password!
DB_PASSWORD=changeme

# =============================================================================
# Authentication
# =============================================================================

# Auth secret (should be a long random string)
AUTH_SECRET=longrandomsecretstring

# Comma-separated list of system administrator usernames
SYSTEM_USERS=admin,user1,user2

# Authentication provider: CAS (direct) or CAS_PROXIED (via proxy)
AUTH_PROVIDER=CAS

# CAS server to use for authentication (base URL, used for defaults)
AUTH_CAS_SERVER=https://sso.gatech.edu

# CAS endpoints (override only if different from defaults)
AUTH_CAS_LOGIN_URL=https://sso.gatech.edu/cas/login
AUTH_CAS_VALIDATE_URL=https://sso.gatech.edu/cas/serviceValidate
AUTH_CAS_LOGOUT_URL=https://sso.gatech.edu/cas/logout

# CAS proxy entrypoint (required when AUTH_PROVIDER=CAS_PROXIED)
# AUTH_CAS_PROXY_URL=https://proxy.example.com/login

# =============================================================================
# User Data Provider
# =============================================================================

# User data provider: "legacy" (LDAP + SUMS) or "buzzapi"
DATA_PROVIDER=legacy

# LDAP server host (required when DATA_PROVIDER=legacy)
LDAP_HOST=ldap://your-ldap-server
# LDAP base DN for user searches (required when DATA_PROVIDER=legacy)
LDAP_BASE_DN=dc=example,dc=com

# BuzzAPI configuration (required when DATA_PROVIDER=buzzapi)
# BUZZAPI_BASE_URL=https://buzzapi.gatech.edu
# BUZZAPI_USER=your_service_account
# BUZZAPI_PASSWORD=your_password

# Base email domain for fallback email addresses
FALLBACK_EMAIL_DOMAIN=example.com

# =============================================================================
# Vite Build Configuration
# =============================================================================

# Client auth provider: CAS (direct) or CAS_PROXIED (via proxy)
VITE_AUTH_PROVIDER=CAS

# CAS login URL when using direct CAS
VITE_CAS_LOGIN_URL=https://sso.gatech.edu/cas/login

# CAS proxy URL for authentication (required when VITE_AUTH_PROVIDER=CAS_PROXIED)
# VITE_CAS_PROXY_URL=https://proxy.example.com/login

# Sentry DSN servers
VITE_KIOSK_SENTRY_DSN="https://xxx.ingest.sentry.io/yyy"
VITE_CLIENT_SENTRY_DSN="https://xxx.ingest.sentry.io/yyy"
